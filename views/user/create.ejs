<% layout('layout/template.ejs') %>
<% layout('layout/template.ejs') %>
    <div class="container-fluid d-flex justify-content-center">
        <div class="">
            <div class="card shadow" style="width: 25rem;">
                <img src="https://images.unsplash.com/photo-1496545672447-f699b503d270?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1771&q=80" class="card-img-top" alt="...">
                <div class="card-body">
                    <h3 class="card-title">Register</h3>
                    <form  action="/user" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3" >
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="insert username" required autofocus> 
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3" >
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="insert email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3" >
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" name="password" id="password" placeholder="insert password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-success">Registrasi</button>
                        </div>
                    </form>
                </div>
              </div>
        </div>
    </div>